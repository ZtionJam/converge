{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "焦距",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "焦距",
        "width": 400,
        "height": 600,
        "decorations": false,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "windows": {
        "wix": {
          "language": "zh-CN"
        }
      },
      "active": true,
      "targets": "all",
      "identifier": "cn.ztion.converge.client",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.png"
    }
  }
}